{
    "name": "revisitor",
    "version": "0.2.0",
    "description": "A task runner for your git projects to execute jobs at regular intervals and generate reports / alerts / notifications / mails",
    "engines": {
        "node": ">=18"
    },
    "main": "index.js",
    "bin": {
        "revisitor": "./index.js"
    },
    "scripts": {
        "lint": "eslint .",
        "test": "npm run lint",
        "start": "node index.js"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/webextensions/revisitor.git"
    },
    "keywords": [
        "task",
        "runner",
        "git",
        "project",
        "execute",
        "jobs",
        "time",
        "period",
        "periodically",
        "regular",
        "interval",
        "generate",
        "reports",
        "alerts",
        "notifications",
        "mails",
        "emails"
    ],
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/webextensions/revisitor/issues"
    },
    "homepage": "https://github.com/webextensions/revisitor#readme",
    "publishConfig": {
        "access": "public"
    },
    "dependencies": {
        "@pinojs/json-colorizer": "^4.0.0",
        "@sendgrid/mail": "^8.1.3",
        "commander": "^12.1.0",
        "cron-parser": "^4.9.0",
        "cronstrue": "^2.50.0",
        "execa": "^9.3.1",
        "got": "^14.4.2",
        "helpmate": "^1.6.1",
        "node-notifier": "^10.0.1",
        "node-schedule": "^2.1.1",
        "note-down": "^1.0.2",
        "pino": "^9.3.2",
        "pino-pretty": "^11.2.2",
        "semver": "^7.6.3",
        "strip-ansi": "=6.0.1"
    },
    "devDependencies": {
        "eslint": "=8.57.0",
        "eslint-config-ironplate": "^0.10.1"
    }
}
